@{
    ViewData["Title"] = "Registration Confirmation";
}

<div class="container mt-5">
    <div class="card shadow-sm rounded-3">
        <div class="card-body text-center">
            <h2 class="card-title mb-3 text-success">Registration Successful!</h2>
            <p class="card-text">Thank you for registering. Please check your email to confirm your account.</p>
            <p class="text-muted">If you don't receive an email shortly, please check your spam or junk folder.</p>

            <a href="~/Account/Login" class="btn btn-primary mt-3">Go to Login</a>
        </div>
    </div>
</div>
