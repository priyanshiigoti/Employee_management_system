@model Employee_management_system.Models.Entities.Employee

@{
    ViewData["Title"] = "My Profile";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-header bg-primary text-white rounded-top-4">
                    <div class="d-flex justify-content-between align-items-center">
                        <h4 class="mb-0"><i class="bi bi-person-circle me-2"></i>My Profile</h4>
                        <a asp-controller="Profile" asp-action="Edit" class="btn btn-light btn-sm shadow-sm">
                            <i class="bi bi-pencil-square me-1"></i>Edit Info
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    <div class="mb-4 text-center">
                        <i class="bi bi-person-fill text-primary" style="font-size: 5rem;"></i>
                    </div>
                    <dl class="row">
                        <dt class="col-sm-4">Full Name</dt>
                        <dd class="col-sm-8">@Model.IdentityUser?.FullName </dd>

                        <dt class="col-sm-4">Email</dt>
                        <dd class="col-sm-8">@Model.IdentityUser?.Email </dd>

                        <dt class="col-sm-4">Phone</dt>
                        <dd class="col-sm-8">@Model.IdentityUser?.PhoneNumber </dd>

                        <dt class="col-sm-4">Department</dt>
                        <dd class="col-sm-8">@Model.Department?.DepartmentName </dd>

                        <dt class="col-sm-4">Joined At</dt>
                        <dd class="col-sm-8">
                            @Model.IdentityUser?.CreatedAt.ToLocalTime().ToString("f")
                        </dd>
                    </dl>
                </div>
            </div>
        </div>
    </div>
</div>
