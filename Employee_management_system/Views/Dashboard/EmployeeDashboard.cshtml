@model Employee_management_system.Models.EmployeeViewModel

@{
    ViewData["Title"] = "Employee Dashboard";
}

<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded-3">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">Welcome to Your Dashboard</h4>
        </div>
        <div class="card-body">
            <p class="lead text-muted">
                Hello, <strong>@Model.FirstName</strong>. You're logged in as an <strong>Employee</strong>.
            </p>

            <hr />

            <h5 class="mb-3">Your Profile Details</h5>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label fw-bold">Full Name:</label>
                <div class="col-sm-8 pt-1">
                    @Model.FirstName
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label fw-bold">Email:</label>
                <div class="col-sm-8 pt-1">
                    @Model.Email
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label fw-bold">Phone:</label>
                <div class="col-sm-8 pt-1">
                    @(string.IsNullOrEmpty(Model.Phone) ? "N/A" : Model.Phone)
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label fw-bold">Department:</label>
                <div class="col-sm-8 pt-1">
                    @Model.DepartmentName
                </div>
            </div>
        </div>
    </div>
</div>
